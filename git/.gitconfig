[cola]
	spellcheck = false
[user]
	email = rainer@embedded-focus.com
	name = Rainer Poisel
	signingkey = /home/rpoisel/.ssh/id_ed25519.pub
[pull]
	rebase = true
[diff]
	tool = meld
	colorMoved = zebra
[difftool]
	prompt = false
[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"
[merge]
	tool = meld
	autostash = true
[mergetool "meld"]
	prompt = false
	# see: https://stackoverflow.com/a/34119867
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[sendemail]
	smtpEncryption = tls
	smtpServer = smtp.gmail.com
	smtpUser = rainer.poisel@gmail.com
	smtpServerPort = 587
[init]
	defaultBranch = main
[interactive]
  singleKey = true

[alias]
stash-untracked = "!f() {    \
    git stash;               \
    git stash -u;            \
    git stash pop stash@{1}; \
}; f"
	co = checkout
	br = branch
	ci = commit
	st = status
	dt = difftool
	cloner = clone --recursive
    cb = symbolic-ref --short HEAD
[fetch]
	prune = true
	pruneTags = true
	all = true
[github]
	user = rpoisel
[core]
	excludesfile = ~/.gitignore
[rebase]
	autostash = true
[gpg]
	format = ssh
[commit]
	gpgSign = true
[gpg "ssh"]
	allowedSignersFile = /home/rpoisel/.ssh/allowed_signers
